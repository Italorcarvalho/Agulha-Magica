<%@page contentType="text/html" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html lang="en">
    <jsp:include page="cabecalho.jsp"/>

    <body>
        <!-- Logo Inicio -->
        <div class="bottom-bar" style="background: #F3F6FF">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">
                        <div class="logo">
                            <a href="index.jsp">
                                <img src="img/logo2.png" alt="Logo">
                            </a>
                        </div>
                    </div>                                        				
                </div>				
            </div>
        </div>
        <!-- Logo Final -->

        <!-- Formulario de Login Inicio -->
    <center>
        <div class="caixaLogin" >
            <div class="img-user">
                <img src="./img/user.jpg">
            </div>
            <p></p>
            <h5>Logar conta</h5>
            <br>
            <form action="login" method="POST">
                <div class="campo">
                    <input type="text" name="email" id="usuario" required="" />
                    <label>E-mail</label>
                </div>
                <div class="campo">
                    <input type="password" name="senha" id="senha" required="" />
                    <label>Senha</label>
                </div>
                <input type="checkbox" checked="checked" class="checkbox">
                <label class="checkbox2">Lembrar-me</label><br><br>
                <input class="logar" name="logar" value="ENTRAR" type="submit" />	
                <p></p>
                <div id="cadastro" class="field">
                    <a href="cadastro.jsp" >Efetuar Cadastro</a>
                </div>
            </form>
        </div>             
    </center>
    <!-- Formulario de Login Final -->

    <!-- Back to Top -->
    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

    <jsp:include page="bibliotecas_rodape.jsp"/>
</body>
</html>